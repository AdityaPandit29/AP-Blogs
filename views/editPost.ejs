<div class="container">
    <div class="post-flex">
        <% if(locals.blog) {%>
                <div class="post">
                    <form class="edit-post-flex" action="/myPosts" method="POST">
                        <textarea class="edit-textarea" type="text" name="blog"><%= blog %></textarea>
                        <input class="submit" type="submit" value="Post">
                    </form>
                </div>
                
        <% } 
                
        
        else { %>
            <h1>You have not posted yet.</h1>
        <% } %>   
    </div>
</div>

